<div class="side-bar-header">
  <%= link_to current_user.name, edit_user_path(current_user), method: :get, class: 'user-name' %>
  <%= link_to 'チャットを作成する', new_room_path, class: 'chat-make-btn' %>
</div>
<div class="rooms">
  <ul>
    <% current_user.rooms.each do |room| %>
      <li class="room">
        <a href="#" class="room-link"><%= room.name %></a>
      </li>
    <% end %>
  </ul>
</div>
